#!/usr/bin/env python

import argparse
import bestnewmusic as bnm

choices = ['am', 'p4k', 'ra', 'bk', 'fe']
parser = argparse.ArgumentParser(
    description='View recent highly-rated albums in the terminal')
parser.add_argument('source', type=str, choices=choices, help=("Review source."))

args = parser.parse_args()
source = args.source.lower()
if source not in ['am', 'p4k', 'ra', 'fe', 'bk']:
    parser.error("Unrecognized source '{}'. Valid entries are 'fe', 'p4k',"
                 "'ra', 'bk', or 'am'.".format(args.source))

elif source == 'am':
    bnm.allmusic()
elif source == 'p4k':
    bnm.pitchfork()
elif source == 'ra':
    bnm.resident_advisor()
elif source == 'fe':
    bnm.forced_exposure()
elif source == 'bk':
    bnm.boomkat()
